<script>
  $( function() {
    $("#new_button").button().click( function(){
       document.location.href='/bright_text_applications/new';
    });
  });
</script>

<div style="height=60px; width:100px">&nbsp;</div>
<button id="new_button" style="float:left">New <%= session[:style].app_alias.titleize %></button>

<div style="height:110px; width:100px">&nbsp;</div>

<table class="sortable_header" >
	<thead>
	  <tr>
	    <th width="70" data-sort="int" ><b>ID</b></th>
	    <th width="300" data-sort="string" ><b>Name</b><span class="arrow">&darr;</span></th>
	    <th width="55"></th>
	    <th width="55"></th>
            <th width="150"></th>
	    <th data-sort="int" ><b><%= session[:style].group_alias.pluralize.titleize %></b></th>
	  </tr>
	</thead>
	<tbody>
		<% @bt_applications.each do |bt_application| 
		  countQuery = StorySet.find_by_sql ["select count( id ) as count from story_set_categories where application_id = ?", bt_application.id ]
		  count = countQuery[0].count
		  label = session[:style].group_alias
		  label = label.pluralize unless count == 1
		
		%>
		  <tr class="info_row">
		    <td><%= bt_application.id %></td>
                    <td><a href="/story_set_categories?filter=<%= bt_application.id %>"><%=bt_application.name%></a></td>
		    <td style="text-align: left;"><%= link_to "Clone", clone_bright_text_application_path(bt_application)%></td>
		    <td style="text-align: left;"><%= link_to 'Delete', bt_application, :confirm => 'Are you sure?', :method => :delete %></td>
                    <td style="text-align: left;"><%= link_to 'Properties', '/bright_text_applications/' + bt_application.id.to_s + '/edit' %></td>
		    <td><a href="/story_set_categories?filter=<%= bt_application.id %>"><%= count %> <%= label %> </a></td>
		  </tr>
		<% end %>
	</tbody>
</table>
<script>
var _bt1;
var _s1;
var stories;
var members;
var formSubmitted = false;

  function updateToneSlider1( gradients, value ){
    var toneIndex = 0;
    for ( var i = 0; i < gradients.length; i++ ){
      if ( gradients[i].id === value ){
            toneIndex = i;
            break;
      }
    }
    $("#tone-control1").hide( );
    $( "#slider1" ).slider({
      value: toneIndex,
      min: 0,
      max: gradients.length - 1,
      range: false,
      step: 0.001,
      tooltip: "hide"
    });

    $("#slider1").on('slide', function(slideEvt) {
            var toneGradients = gradients;
            var s1 = Math.floor(slideEvt.value);
            if ( _s1 !== s1 ){ // allow smooth moving of the tone selector
              _s1 = s1;
              $( "#gradient1" ).html( gradients[ s1 ].name );
              _bt1.handleToneSelection( gradients[ s1 ].id );
            }
      });
    if ( gradients.length > 1) {
      $( "#gradient1" ).html( gradients[ toneIndex ].name );
      $("#tone-control1").show();
    }
  }

function showMembers(){
   $.ajax({
     type: "get",
     url: "/apologywiz/group_members",
     dataType: "json",
     data: "",
     success: function(data) {
       if(data["success"] === "true") {
          members = data["group_members"];
          console.log(members);
          var rows = "";
          $.each(members, function (i, member) {
            console.log(member);
            rows += "<tr>" +
                      "<td>" + member["email"] + "</td>" +
                      "<td><a id='" + member["id"] +"' data-email='" + member["email"] + "'class='remove_member' href='#'>Remove</a></td>" +
                    "</tr>";
          });
          $("#groups-table tbody").html("");
          $("#groups-table tbody").append(rows);
          $('#groups-table').trigger('footable_redraw');
       }
     }
   });
}

function showStories(){
   $.ajax({
     type: "get",
     url: "/apologywiz/stories",
     dataType: "json",
     data: "",
     success: function(data) {
       if(data["success"] === "true") {
          stories = data["stories"];
          console.log(stories);
          var rows = "";
          $.each(stories, function (i, apology) {
            console.log(apology);
            if(apology["user_id"]===1){
              rows += "<tr>" +
              "<td><a id='" + i +"' class='edit_apology' href='#'>" + apology["name"] + "</a></td>" +
              "<td>" + 
              <%#*"<a id='" + apology["category_id"] +"' data-apology-id='" + apology["id"] +"' data-apology='" + apology["name"] + "'class='clone_story' href='#'>Clone</a>" +%> 
              <%#*" | " +%>
              "<a id='" + apology["id"] +"' data-apology='" + apology["name"] + "'class='remove_story' href='#'>Delete</a>" + 
              "</td>" +
              "</tr>";
            }else{              
              rows += "<tr>" +
              "<td><a id='" + i +"' class='edit_apology' href='#'>" + apology["name"] + "</a></td>" +
              <%#*"<td>" +%> 
              <%#*"<a id='" + apology["category_id"] +"' data-apology-id='" + apology["id"] +"' data-apology='" + apology["name"] + "'class='clone_story' href='#'>Clone</a>" +%>  
              <%#*"</td>" +%>
              "</tr>";
            }
          });
          $("#apologies tbody").html("");
          $("#apologies tbody").append(rows);
          $('#apologies').trigger('footable_redraw');
          
          if (stories.length > 0)
            $('#story_category').val(stories[0]["name"]);
            
       }
     }
   });
}

$(document).ready(function() {  
  $(function () {
    $('#apologies').footable();
    $('#groups-table').footable();
  });
  
  $("#btn_back_to_step_1").on('click', function(event){
    event.preventDefault();
    $("#astep_1").click();    
  }); 
  
  $("#btn_back_to_step_2").on('click', function(event){
    $("#astep_2").click();    
  });
 
  $("#apologies").on('click','a.edit_apology', function(event){
    event.preventDefault();
    var index = $(this).attr("id");
    var story = stories[index];
    $("#story_id").val(story["id"]);
    $("#category_name").html("");
    $("#name").html(story["name"]);
    $("#bt_one").html("");
    $("#fieldDescriptor").val("");
    $("#fieldSummary").val("");
    if(story["descriptor"]!=="")
      _bt1.renderData(JSON.parse(story["descriptor"]));
    $('form.edit_story').get(0).setAttribute('action', '/apologywiz/stories/'+ story["id"]);
    $("#astep_2").tab('show');
    $('#story_category').val(story["name"]);
    if(story["public"])
      $('#story_public').prop("checked", true);
      
  });

  $("#groups-table").on('click','a.remove_member', function(event){
    event.preventDefault();
    var index = $(this).attr("id");
    var email = $(this).attr("data-email");          

    BootstrapDialog.show({
      type: BootstrapDialog.TYPE_DEFAULT,
      title: 'Confirmation!',
      message: '<p>Remove email \''+email+'\'?',
      buttons: [{
          id: 'btn-delete',
          label: 'Delete',
          cssClass: 'btn-danger',
          action: function(dialog){
              var $button = this; // 'this' here is a jQuery object that wrapping the <button> DOM element.
              $button.disable();
              $button.spin();
              dialog.setClosable(false);
              $.ajax({
                type: "DELETE",
                url: "/apologywiz/group_members/"+index,
                dataType: "json",
                data: "",
                success: function(data) {
                  if(data["success"] === "true") {
                    $button.stopSpin();
                    dialog.setMessage('<p>\'' + email +'\' is removed successfully!</p>');
                    dialog.setClosable(true);
                    showMembers();
                  }
                }
              });
          }
        }, {
          label: 'Close',
          action: function(dialogItself){
              dialogItself.close();
          }
        }]
    });
  });

  $("#apologies").on('click','a.remove_story', function(event){
    event.preventDefault();
    var index = $(this).attr("id");
    var apology_name = $(this).attr("data-apology");

    BootstrapDialog.show({
    type: BootstrapDialog.TYPE_DEFAULT,
    title: 'Confirmation!',
    message: '<p>Delete apology named \''+apology_name+'\'?',
    buttons: [{
      id: 'btn-delete',
      label: 'Delete',
      cssClass: 'btn-danger',
      action: function(dialog){
        var $button = this; // 'this' here is a jQuery object that wrapping the <button> DOM element.
        $button.disable();
        $button.spin();
        dialog.setClosable(false);
        $.ajax({
          type: "GET",
          url: "/apologywiz/stories/"+index+"/delete",
          dataType: "json",
          data: "",
          success: function(data) {
            if(data["success"] === "true") {
              $button.stopSpin();
              dialog.setMessage('<p>\'' + apology_name +'\' is removed successfully!</p>');
              dialog.setClosable(true);
              showStories();
            }
          }
        });
      }
    }, {
      label: 'Close',
      action: function(dialogItself){
          dialogItself.close();
      }
    }
    ]
    });
  });
  
  

  $("#apologies").on('click','a.clone_story', function(event){
    event.preventDefault();
    var index = $(this).attr("id");
    var story_id = $(this).attr("data-apology-id");
    var apology_name = $(this).attr("data-apology");

    BootstrapDialog.show({
    type: BootstrapDialog.TYPE_DEFAULT,
    title: 'Confirmation!',
    message: '<p>Clone apology named \''+apology_name+'\'?',
    buttons: [{
      id: 'btn-clone',
      label: 'Clone',
      cssClass: 'btn-primary',
      action: function(dialog){
        var $button = this; // 'this' here is a jQuery object that wrapping the <button> DOM element.
        $button.disable();
        $button.spin();
        dialog.setClosable(false);
        $.ajax({
          type: "GET",
          url: "/apologywiz/story_set_categories/"+index+"/clone_silently?story_id="+story_id,
          dataType: "json",
          data: "",
          success: function(data) {
            if(data["success"] === "true") {
              $button.stopSpin();
              dialog.setMessage('<p>\'' + apology_name +'\' is cloned successfully!</p>');
              dialog.setClosable(true);
              showStories();
            }
          }
        });
      }
    }, {
      label: 'Close',
      action: function(dialogItself){
          dialogItself.close();
      }
    }
    ]
    });
  });
  
  $('#dialog').on('shown.bs.modal', function (e) {
    $('#dialog').find('button').focus();  
  });
  
});

$(document).ready(function() {

    _bt1 = new BrightTextEditor("bt_one", true);
    var rawData = $("#fieldDescriptor");
    var textData = $("#fieldSummary");

    _bt1.onChange(function() {
      rawData[0].value = $.toJSON(_bt1.toData());
      textData[0].value = _bt1.toString();
      updateToneSlider1(_bt1.toneGradients(), _bt1.selectedTone());
    });

    $("#edit_choicesets").on( "click", function(event){
          event.preventDefault();
          _bt1.editChoicesets();
    });

    $("#instant_rewrite1").on( "click", function(event){
      event.preventDefault();
      _bt1.rewrite();
    });

    showStories();
  });

$("#astep_1").click(function() {
  if(formSubmitted===true){
    formSubmitted = false;
    //$('#story_category').val('');
    $('#story_name').val('');  
    showStories();
  }
  $(this).tab('show');
});

$("#astep_2").click(function() {
  if(formSubmitted===false){
    var title = $("#story_category").val();
    if(title===''){
      $('#dialog-message').replaceWith('<p id=\"dialog-message\">Name can\'t be blank</p>');
      $('#dialog').modal({
        keyboard: true
      });
      $("#astep_1").click();
      $("#story_category").focus();
    }else{
      var found = false;
      for (var i = 0; i < stories.length; i++) {
        if(stories[i].name===title){
          found = true;
          break;
        }
      }
      if(found){ //if(subtitle===''){
        $('#dialog-message').replaceWith('<p id=\"dialog-message\">You\'ve already got an apology named \'' + title + '\'. Please give this one a new name.</p>');
        $('#dialog').modal({
          keyboard: true
        });
        $("#astep_1").click();
        $("#story_name").focus();
      }else{
        $.ajax({
          type: "post",
          url: "/apologywiz/stories",
          dataType: "json",
          data: $("#new_story").serialize(),
          success: function(data) {
            formSubmitted = true;
            if(data["id"] !== "") {
              $("#story_id").val(data["id"]);
              $("#category_name").text($("#story_category").val());
              $("#name").text($("#story_name").val());
              $('form.edit_story').get(0).setAttribute('action', '/apologywiz/stories/'+data["id"]);
              $('#dialog-message').replaceWith('<p id=\"dialog-message\">Your new apology \'' + title + '\' has been created.</p>');
              $('#dialog').modal({
                keyboard: true
              });
            }
            else if(data["name"]){
              message = data["name"];
              $("#story_name").parent().addClass('field_with_errors');
              $("#story_name + .message").remove();
              $("#story_name").after('<label class="message" style="margin-top: 50px; display: block; margin-left: 30px;">' + message + '</label>'); 
              $("a[href='.step1']").click();
            }
          }
        });

        $("#bt_one").html("");
        $("#fieldDescriptor").val("");
        $("#fieldSummary").val("");
        $(this).tab('show');

      }
    }
  }else{
    $(this).tab('show');
  }
});

$("#astep_3").click(function() {
  showMembers();
  $(this).tab('show');
});

(function() {
    window.alert = function(str) {
        $('#dialog-message').replaceWith('<p id=\"dialog-message\">'+ str +'</p>');
        $('#dialog').modal({
          keyboard: true
        });
    };
})();



</script>
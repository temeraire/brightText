<% if @story.errors.count == 0 %>
  $('#dialog-message').replaceWith('<p id=\"dialog-message\"><%= session[:style].story_alias.titleize %> was created successfully</p>');
  $('#dialog').modal({
    keyboard: true
  });
<% else %>
  $('#dialog-message').replaceWith('<p id=\"dialog-message\">An error occurred while saving <%= session[:style].story_alias.titleize %></p>');
  $('#dialog').modal({
    keyboard: true
  });
<% end %>

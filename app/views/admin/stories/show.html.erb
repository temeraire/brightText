<% breadcrumb :story, @story%>
<div class="col-md-10 col-md-offset-1">
  <p id="notice"><%= notice %></p>

  <div class="form-group">
    <label class="control-label" for="story_desc">Name</label>
    <p id="story_desc" class="form-control-static"><%= @story.name%></p>
  </div>
  <div class="form-group">
    <label class="control-label" for="story_desc">Description</label>
    <p id="story_desc" class="form-control-static"><%= @story.description%></p>
  </div>
  <div class="row">
    <div class="col-md-2">
      <%= link_to 'Back', admin_stories_path,  {:class => "btn btn-default"}   %>
    </div>
    <div class="col-md-2">
      <%= link_to 'Edit', edit_admin_story_path(@story), {:class => "btn btn-primary"}  %>
    </div>
  </div>
</div>



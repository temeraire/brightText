<div class="container">
  <div class="row">

    <div class="col-md-2 col-md-offset-4">
      <h3>Login</h3>
    </div>
  </div>
  <br/>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_for([:scriptwords, @user], html: { role: "form", class: "form"}, url: {action: "authenticate"}, validate: true) do |f| %>
          <div class="form-group">
            <%= f.label :email, :class=>'control-label' %>
            <%= f.email_field :email, :class=>'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password, :class=>'control-label' %>
            <%= f.password_field :password, :class=>'form-control' %>
          </div>
          <div class="row">
            <div class="col-md-6">
              <%= link_to 'Forgot password?', new_scriptwords_password_reset_path,  {:class => "btn btn-default"}   %>
            </div>
            <div class="col-md-6">
              <span class="pull-right">
                <%= f.submit :id => "save_application_btn", :value => "Log in", :class => "btn btn-primary" %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <br/>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <span class="pull-left">
        <%= link_to 'New User?', scriptwords_register_path, {:class => "btn btn-success"}%>
      </span>
    </div>
  </div>
  </div>
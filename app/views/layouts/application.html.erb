<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "BrightText Applications" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "BrightText Admin Application" %>">
    <%= stylesheet_link_tag params[:controller], media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag params[:controller], "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'layouts/navigation' %>
    <div class="container">
      <div class="jumbortonui-corner-all">
        <div class="row">
          <div class="col-md-12">
            <%= render 'layouts/messages' %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

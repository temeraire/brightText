<!DOCTYPE html>
<html>
<head>
  <title>BrightText</title>
  
<%
if request.url.index "/app/"
%>
  <link type="text/css" href="/app/stylesheets/jquery-flick/jquery-ui.css" rel="stylesheet" />	
<%
else
%>
  <link type="text/css" href="/stylesheets/jquery-flick/jquery-ui.css" rel="stylesheet" />	
<%
end
%>


  <%= javascript_include_tag :defaults %>
  
<%
if request.url.index "/app/"
%>  
  <script src="/app/js/jquery/jquery.json-2.2.min.js"></script>
  <script src="/app/js/jquery/jquery-ui-1.8.20.custom.min.js"></script>  
  <script src="/app/js/jquery/jquery.conmenu.js"></script>  
  
  
<%
else
%>  
  <script src="/js/jquery/jquery.json-2.2.min.js"></script>
  <script src="/js/jquery/jquery-ui-1.8.20.custom.min.js"></script>  
  <script src="/js/jquery/jquery.conmenu.js"></script> 
  <script src="/js/jquery/jquery.cookie.js"></script> 
  
<%
end
%>  

  
  <%= stylesheet_link_tag :all %>
  
  <style>
    .page_content{
      height:650px;
      overflow-y:auto;
    }
  
    .form_container{
      padding: 0px 20px 50px 20px;
      background-color:black;
      border: 1px solid #666666;
      margin:10px 0px 0px 100px;
      width:572px;
    }
  
    .form_element{
      padding:3px 10px 15px 10px;
      margin:10px 0px 10px 0px;
      width:550px;
    }
    
    .outlined{
      border:1px dashed #666666;
    
    }
  
    .form_item_label{
      width:200px;
      float:left;
      text-size:11pt;
      padding:10px 0px 0px 0px;
      
    
    }
    
    .form_item{
      width:200px;
      float:left;
      padding-top:6px;
    }  
    
    .form_element{
      height:25px;
    }  
    
  </style>


  <%= csrf_meta_tag %>
  
  <script>
<% if session[:domain].nickname == "Admin" %>
    var landing = [ "/app/domains" ];
<% else %>    
    var landing = [ "/app/story_groups", "/app/stories" ];
<% end %>
  
    if ( document.location.href.indexOf("http://localhost:3000") == 0 ){
<% if session[:domain].nickname == "Admin" %>
      landing = [ "/domains"];
<% else %> 
      landing = [ "/bright_text_applications", "/story_set_categories", "/story_sets", "/stories" ];
<% end %>      
    }
  
  
    $(function() {
      var selectedTabIndex = -1;
      for ( var i = 0; i < landing.length; i++ ){
        if ( document.location.href.indexOf( landing[i] ) != -1 ){
           selectedTabIndex = i;
           break;
        }
      }    
      
      if ( selectedTabIndex >= 0 ){
        $( "#tabs" ).tabs( { selected: selectedTabIndex });   
      }
      else { // add a temporary tab that was navigated to by its full url
        $( "#tabs" ).tabs( {selected:-1});
        $( "#tabs" ).tabs( "add" , "#tab-content" , "Other", landing.count).tabs( "select" , landing.count );
      }
      $( "#tabs" ).bind( "tabsshow", function(event, ui) {
        var selectedTab = $( "#tabs" ).tabs( "option", "selected" );
        document.location.href = landing[ selectedTab ]      
      });   
      
      
       $(".controlButton").button();
    });
    
    function log( msg )
    {
      if ( typeof ( console ) != "undefined" ){
        console.log( msg );
      }
    }    
	</script>  
</head>
<body>


<div id="tabs">
  <div>
  <ul >
<% if session[:domain].nickname == "Admin" %>
    <li><a href="#tab-content">Admin</a></li>
<% else %>  
    <li><a href="#tab-content">Applications</a></li>
    <li><a href="#tab-content">Surveys</a></li>
    <li><a href="#tab-content">Questions</a></li>
    <li><a href="#tab-content">Answers</a></li>
    <li style="color: white; float:right; width:150px; height:20px; padding-top:10px"><%= session[:domain].nickname %><span onclick="document.location.href='/'" style="cursor:pointer; padding-left:5px; font-size:8pt; font-color:blue; font-weight:regular; color:blue;"><u>log out</u></span></li>
    
<% end %>      

  </ul>
  </div>
  <div id="tab-content" class="page_content">
  <%= yield %>	
  </div>
</div>
</body>
</html>
